                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.DataFineValiditaUtente)
                </dt>
                <dd class = "col-sm-8">
                  @{ 
                                if (Model.DataFineValiditaUtente.HasValue)
                                {
                                        @Html.DisplayFor(model => model.DataFineValiditaUtente)
                                    }
                                    else
                                    {
                                    <p style="display:inline">N.D.</p>
                                }
                            }



                        </dd>
                    </dl>


                    @if (Model.Ospite != null)
                    {
                        <dl class="row" style="border:1px solid #eee">                       
                            <dt class = "col-sm-12"><u style="font-size:18px;color: #043659;">Ospite</u></dt>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Ospite.Mail)
                </dt>

                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Ospite.Mail)
                </dd>


                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Ospite.Data_aggiornamento)
                </dt>

                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Ospite.Data_aggiornamento)
