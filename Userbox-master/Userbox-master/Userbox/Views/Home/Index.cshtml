                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Ospite.Data_fine)
                </dt>

                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Ospite.Data_fine)
                </dd>
                                  
        </dl>
        }
        </div>

       @*Personale*@
        @if (Model.Personale != null)
                        {
           <div class="col-md-4">
            <dl class="row" style="border:1px solid #eee">                       
                <dt class = "col-sm-12"><u style="font-size:18px;color: #043659;">Personale</u></dt>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Personale.Matricola)
                </dt>

                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Personale.Matricola)
                </dd>

                <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Personale.Mail)
            </dt>

            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Personale.Mail)
            </dd>


            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Personale.Mail_esterna)
            </dt>

            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Personale.Mail_esterna)
            </dd>

             @if (Model.Personale.RuoliPersonale != null)
        {
            <hr />
            if (Model.Personale.RuoliPersonale.Count > 1)
            {
                <dt><u>Ruoli</u></dt>
                <dd></dd>
            }
            
            foreach (Userbox.Models.APIRuoliPersonale r in Model.Personale.RuoliPersonale)
                                            {

                                                <dt class = "col-sm-4"></dt>
                                                <dd class = "col-sm-8">----------------</dd>


                                                <dt class = "col-sm-4">Ruolo</dt>
                                                <dd class = "col-sm-8">@r.RuoloDescr</dd>
                                                
                                                <dt class = "col-sm-4">SSD</dt>
                                                if (r.Cd_ssd != null && r.Cd_ssd != "000000000000" && r.Cd_ssd != "")
                                                {
                                                    <dd class = "col-sm-8">@r.Ds_ssd - @r.Ds_ssd_breve  [ Cod. @r.Cd_ssd ]</dd>
                                                }
                                                else
                                                {
                                                    <dd class = "col-sm-8">N.D.</dd>
                                                }

                                                <dt class = "col-sm-4">Area SSD</dt>
                                                if (r.Area_ssd != null && r.Area_ssd != "00" && r.Area_ssd != "")
                                                {
                                                    <dd class = "col-sm-8">@r.Ds_area_ssd  [ Cod. @r.Area_ssd ]</dd>
                                                }
                                                else
                                                {
                                                    <dd class = "col-sm-8">N.D.</dd>
                                                }

                                                
                                        <dt  class = "col-sm-4">
                                            @Html.DisplayNameFor(model => model.Personale.Data_inizio)
                                        </dt>

                                        <dd  class = "col-sm-8">
                                            @Html.DisplayFor(model => model.Personale.Data_inizio)
                                        </dd>

                                              @*  afferenze*@

                                                <dt class = "col-sm-4">
                                                    Afferenza Organizzativa
                                                </dt>

                                                <dd class = "col-sm-8">
                                                    @if (r.Afferenze != null)
                                                    {

                                                        if (r.Afferenze.Count == 1)
                                                        {
                                                            if (r.Afferenze[0].Descr_afferenza != "")
                                                            {
                                                                <p style="margin:1px; font-size:12px"> @r.Afferenze[0].Descr_afferenza [Cod. @r.Afferenze[0].Cod_afferenza]</p>

                                                            }
                                                            else
                                                            {
                                                                <p> N.D.</p>

                                                            }
                                                        }
                                                        else
                                                        {
                                                            foreach (Userbox.Models.APIAfferenze af in r.Afferenze)
                                                            {
                                                                if (af.Descr_afferenza != "")
                                                                {
                                                                    <p> @af.Descr_afferenza [Cod. @af.Cod_afferenza]</p>

                                                                }
                                                                
                                                            }
                                                        }

                                                    }
                                                </dd>


                                            }
                                        }
                                        <hr />

                                               @* afferenze*@

                                                
            
        



       
        <hr />


                                       



                                       


        </dl>
                    </div>
                }
                @*fine personale*@




                @*Studente*@
                @if (Model.Studente != null)
                {
                    <div class="col-md-4">
                        <dl class="row" style="border:1px solid #eee">                       
                <dt class = "col-sm-12"><u style="font-size:18px;color: #043659;">Studente</u></dt>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Studente.Esse3PersID)
                </dt>

                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Studente.Esse3PersID)
                </dd>

                <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Studente.Uid)
                </dt>
                 <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Studente.Uid)
                </dd>

                 <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Studente.Mail)
                </dt>
                 <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Studente.Mail)
                </dd>

                 <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Studente.Mail_esterna)
                </dt>
                 <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Studente.Mail_esterna)
                </dd>

                  <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Studente.Cellulare)
                </dt>
                  @if (Model.Studente.Cellulare != null && Model.Studente.Cellulare != "")
                                {
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => Model.Studente.Cellulare)
                    </dd>
                }
                else
                {
                    <dd class = "col-sm-8">N.D.</dd>
                }

                @*corsi*@   
                 @if (Model.Studente.Corsi != null)
                                {
                                    <hr />
                                    if (Model.Studente.Corsi.Count > 1)
                                    {
                                        <dt class = "col-sm-12"><u>Corsi</u></dt>
                                        <dd></dd>
                                    }

                                    foreach (Userbox.Models.APICorso c in Model.Studente.Corsi)
                                    {

                                     


                                        <dt class = "col-sm-4">Corso</dt>
                                        <dd class = "col-sm-8"> @c.Corso_studio  [ @c.Tipo_corso] </dd>
                                       
                                        <dt class = "col-sm-4">Matricola</dt>
                                        <dd class = "col-sm-8">@c.Matricola</dd>
                                        
                                        <dt class = "col-sm-4">Data Validità Studente</dt>
                                        <dd class = "col-sm-8">
                                            @c.Data_inizio -

                                            @if (c.Data_fine == null)
                                            {<p style="display:inline">N.D.</p>}
                                            else
                                            { 
                                                @c.Data_fine
                                            }
                                            
                                        </dd>
                                    }
                                }
                                <hr />

                 @* fine corsi*@   
                
                



</dl>
</div>
} 
@*fine studente*@
