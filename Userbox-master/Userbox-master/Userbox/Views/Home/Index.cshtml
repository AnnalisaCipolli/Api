                </dt>   
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Cod_fiscale)
                </dd>
          
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Nazione_nascita_nome)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Nazione_nascita_nome)
